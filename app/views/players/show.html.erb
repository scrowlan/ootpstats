<h1>Player!</h1>

<p>
  <strong>Name:</strong>
  <%= @player.FirstName %> <%= @player.LastName %>
</p>
 
<p>
  <strong>Overall:</strong>
  <%= @player.Card_Value %>
  <strong>CID:</strong>
  <%= @player.cid %>
</p>
<p>
  <strong>Player Statistics</strong>
  <table>
    <thead>
      <tr>
        <th>Tourney</th>
        <th>At Bats</th>
        <th>HR</th>
        
      </tr>
    </thead>
    <tbody>
      <% @statistics.each do |stats| %>  
      <tr>
        <td><%= stats.tournament_tier.title %></td>
        <td><%= stats.hitterab %></td>
        <td><%= stats.hitterhr %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
</p>